grisclaro= #e8e8e8
grisoscuro=#444
azul = #22bce0
naranja= #dd4f24

@font-face {
  font-family: 'iconos';
  src:  url('../fonts/icomoon.eot?es0t3g');
  src:  url('../fonts/icomoon.eot?es0t3g#iefix') format('embedded-opentype'),
    url('../fonts/icomoon.ttf?es0t3g') format('truetype'),
    url('../fonts/icomoon.woff?es0t3g') format('woff'),
    url('../fonts/icomoon.svg?es0t3g#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}


a 
	color naranja
body

	background grisclaro
	color grisoscuro
	font-family arial
	font-size 16px
	

header
	
	background grisoscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 4

	.logo
		border-right 1px solid azul
		float left
		width 60px
		
		.img-logo
				width 52px
				
	.titular
		margin 0 60px 0 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.links	
		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none
			margin 10px
			padding 0
		
		.publicar
			color white
			float right
			font-style italic
			background naranja
			margin -3px 4em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			top -5px
		.publicar:before
			display inline-block
			font-family "iconos"	
			content "\e908"
			margin 2px 3px 0 0 

				


		
			
	.usuario
		position absolute
		top 6px
		right 0
		
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
		.flechita
			
			background naranja
			color white
			display block
			text-decoration none
			padding 2px
			position absolute
			right 0
			top 15px
			text-align right
			width 50%
		.flechita:after
			font-family "iconos"
			content "\ea36"
			text-shadow 1px 1px 0px black


form
	padding 0.8em
	display none
	
	label
		display inline-block
		width 60px
		

nav
	background azul
	border-left 15px solid white
	
	&:before
		border-bottom 20px solid transparent
		border-left 10px solid white
		border-top 20px solid transparent
		content ""
		left 10
		position absolute
		
	
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		
		li
			display inline-block
			a
				color white
				display inline-block
				text-decoration none
				margin 0 0.5em
				padding 0 0.2em
		
.posts
	
	padding 0.5em
	
	.post
		
		background white
		border-radius 0.5em 0.5em 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(0, 0, 0, 0.50)
		margin-bottom 1em
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			.datos
				float right
				.comentarios
					background grisoscuro
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
				
				.estrellita
					text-decoration none
				.estrellita:after
					font-family "iconos"
					content:"\e9d9"
					color #FFBF00
					

			.votos
				float left
				
				.down
				.up
					text-decoration none	
				.down
					color red
				.down:before
					font-family "iconos"
					content "\ea36"
					

				.up
					color green
				.up:before
					font-family "iconos"
					content "\ea32"



			
		.descripcion
			color grisoscuro
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
					
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
				
				.fecha
					float right
					margin 0 1em 0 0

				.titulo
					color grisoscuro
					font-style italic
					font-size 18px
					margin 0
					padding 0.5em 0.5em 0 0
				
				
			.imagen
				float left
				margin 0
				img
					height 160px
					vertical-align top
					width 120px

footer
	background naranja
	/*color rgba (white,0.5)*/
	text-align center
	padding 1em
	h3
		font-size 14px
		font-weight normal
		
		strong 
			display block


@media screen and (min-width:768px)

	header
		.links
			.publicar
				padding-left 3em
				position relative
			.publicar:before
				left 0px
				font-size 2.5em
				position absolute
				top -15px
				

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
				/*odd =impares even=elementos ... pares cada 3 items (3n) */
		.post:nth-child(odd)
			margin-right 2%	
		